  <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            text-align: center;
            background-color: #34495e;
            border-radius: 10px;
        }
        .title, label {
            color: #ecf0f1;
        }
        .title {
            font-size: 2.5em;
            margin-bottom: 20px;
        }
        label {
            font-size: 1.25em;
        }
        .box {
            background-color: #23303d;
            padding: 20px;
            border-radius: 10px;
        }
        .input, .button {
            margin-top: 10px;
        }
    </style>

    <div class="container">
        <h2 class="title has-text-white">Register</h2>
        <div class="box">
            <form action="/register" method="POST">
                <div class="field">
                    <label class="label" for="username">Username</label>
                    <div class="control">
                        <input class="input" type="text" id="username" name="username" required>
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="password">Password</label>
                    <div class="control">
                        <input class="input" type="password" id="password" name="password" required>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-primary is-fullwidth">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>