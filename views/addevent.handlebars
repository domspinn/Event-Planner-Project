<link rel="stylesheet" href="../public/css/addevent.css">
    <div id="event-form">
        <label for="event-title">Event Title:</label>
        <input type="text" id="event-title">
        <label for="event-date">Date:</label>
        <input type="date" id="event-date">
        <label for="event-description">Description:</label>
        <textarea id="event-description"></textarea>
        <button id="post">Post</button>
    </div>

    <div id="edit-event">
        <h3>Edit Event</h3>
        <label for="edit-title">Event Title:</label>
        <input type="text" id="edit-title">
        <label for="edit-date">Date:</label>
        <input type="date" id="edit-date">
        <label for="edit-description">Description:</label>
        <textarea id="edit-description"></textarea>
        <button id="update-event">Update</button>
        <button id="cancel">Cancel</button>
    </div>

    <div id="calendar"></div>
    <div id="events-list"></div>

    <script id="calendar" type="text">
        <h2>{{month}} {{year}}</h2>
        <table>
            <thead>
                <tr>
                    {{#each days}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each weeks}}
                <tr>
                    {{#each this}}
                    <td>{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </script>

    <script id="events" type="text">
        <h3>Events</h3>
        <ul>
            {{#each events}}
            <li>
                <strong>{{summary}}</strong> ({{start.date}})
                <button onclick="editEvent('{{id}}', '{{summary}}', '{{start.date}}', '{{description}}')">Edit</button>
                <button onclick="deleteEvent('{{id}}')">Delete</button>
            </li>
            {{/each}}
        </ul>
    </script>

    <script src="../javascript/addevent.js"></script>
